{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "maxSize": 20971520
  },
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "include": ["unpacked/**/*"],
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingComma": "es5"
    }
  }
}
